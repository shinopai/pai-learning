<section class="flex justify-center items-center bg-gray-100">
  <div class="max-w-md w-full bg-white rounded p-6 space-y-4 my-10">
    <div class="mb-4">
      <h2 class="text-xl font-bold">新規問題作成</h2>
    </div>
    <%= form_with model: @post, url: user_posts_path(current_user.id), local: true do |new_post| %>
    <%= render "posts/shared/error_messages", resource: @post %>
    <div>
      <%= new_post.text_field :title, class: 'w-full p-4 text-sm bg-gray-50 focus:outline-none border border-gray-200 rounded text-gray-600', placeholder: '問題タイトル' %>
    </div>
    <div>
      <%= new_post.text_area :question, class: 'w-full p-4 text-sm bg-gray-50 focus:outline-none border border-gray-200 rounded text-gray-600 resize-none', placeholder: '問題', rows: 10 %>
    </div>
    <div>
      <%= new_post.text_area :answer, class: 'w-full p-4 text-sm bg-gray-50 focus:outline-none border border-gray-200 rounded text-gray-600 resize-none', placeholder: '答え', rows: 10 %>
    </div>
    <div class="mt-3">
      <%= fields_for @category do |category| %>
      <%= category.label :name, 'カテゴリー' %><br>
      <%= category.collection_select :name, Category.all, :id, :name, { include_blank: '選択してください'}, { class: 'border p-2' } %>
      <% end %>
    </div>
    <div class="mt-3">
      <%= new_post.submit '投稿', class: 'w-full py-4 bg-blue-600 hover:bg-blue-700 rounded text-sm font-bold text-gray-50 transition duration-200 cursor-pointer' %>
    </div>
    <% end %>
    <div class="flex items-center justify-between">
    </div>
  </div>
</section>
