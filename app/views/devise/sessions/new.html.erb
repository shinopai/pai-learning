<section class="flex justify-center items-center h-screen bg-gray-100">
  <div class="max-w-md w-full bg-white rounded p-6 space-y-4">
    <div class="mb-4">
      <h2 class="text-xl font-bold">PaiLearningにログイン</h2>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |login_user| %>
    <div>
      <%= login_user.email_field :email, class: 'w-full p-4 text-sm bg-gray-50 focus:outline-none border border-gray-200 rounded text-gray-600', placeholder: 'メールアドレス' %>
    </div>
    <div>
      <%= login_user.password_field :password, class: 'w-full p-4 text-sm bg-gray-50 focus:outline-none border border-gray-200 rounded text-gray-600', placeholder: 'パスワード' %>
    </div>
    <div class="mt-3">
      <%= login_user.submit 'ログイン', class: 'w-full py-4 bg-blue-600 hover:bg-blue-700 rounded text-sm font-bold text-gray-50 transition duration-200 cursor-pointer' %>
    </div>
    <% end %>
    <div class="flex items-center justify-between">
    </div>
  </div>
</section>
