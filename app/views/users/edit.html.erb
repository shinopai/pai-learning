<section class="flex justify-center items-center h-screen bg-gray-100">
  <div class="max-w-md w-full bg-white rounded p-6 space-y-4">
    <% if @user.errors.any? %>
    <ul class="text-red-500">
      <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>
    <div class="mb-4">
      <h2 class="text-xl font-bold">ユーザー情報編集</h2>
    </div>
    <%= form_with model: @user, url: user_update_path(@user), local: true do |edit_user| %>
    <div>
      <%= edit_user.text_field :name, class: 'w-full p-4 text-sm bg-gray-50 focus:outline-none border border-gray-200 rounded text-gray-600', placeholder: '名前' %>
    </div>
    <div>
      <%= edit_user.email_field :email, class: 'w-full p-4 text-sm bg-gray-50 focus:outline-none border border-gray-200 rounded text-gray-600', placeholder: 'メールアドレス' %>
    </div>
    <div class="mt-3">
      <%= edit_user.label :user_image, 'ユーザー画像' %>
      <%= edit_user.file_field :user_image, class: 'w-full p-4 text-sm bg-gray-50 focus:outline-none border border-gray-200 rounded text-gray-600' %>
    </div>
    <div class="mt-3">
      <%= edit_user.submit '更新する', class: 'w-full py-4 bg-blue-600 hover:bg-blue-700 rounded text-sm font-bold text-gray-50 transition duration-200 cursor-pointer' %>
    </div>
    <% end %>
    <div class="flex items-center justify-between">
    </div>
  </div>
</section>
