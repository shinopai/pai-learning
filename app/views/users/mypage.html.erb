<% if flash[:success] %>
<p class="bg-green-300 text-center p-2 font-bold text-white"><%= flash[:success] %></p>
<% end %>

<div class="w-4/6 mx-auto mt-10">
  <table class="table-auto w-full">
    <tbody class="border">
      <tr class="border">
        <th class="p-2 border-r">名前</th>
        <td class="pl-5"><%= @user.name %></td>
      </tr>
      <tr class="border">
        <th class="p-2 border-r">メールアドレス</th>
        <td class="pl-5"><%= @user.email %></td>
      </tr>
      <tr class="border">
        <th class="p-3 border-r">ユーザー画像</th>
        <td class="pl-5 py-2"><%= image_tag @user.user_image.url, width: 150, height: 150 %></td>
      </tr>
      <tr class="border">
        <th class="p-2 border-r">問題投稿数</th>
        <td class="pl-5">0</td>
      </tr>
      <tr class="border">
        <th class="p-2 border-r">問題集数</th>
        <td class="pl-5">0</td>
      </tr>
    </tbody>
  </table>
  <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'block mt-3 text-blue-300 hover:text-blue-500' %>
  <%= link_to 'ユーザー情報編集', user_edit_path(@user), class: 'block mt-2 text-blue-300 hover:text-blue-500' %>
</div>
